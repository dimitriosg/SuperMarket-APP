{
  "name": "supermarket-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.1.17",
  "engines": {
    "node": "^22.0.0",
    "bun": ">=1.1.17"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n api,web \"bun run --cwd apps/api dev\" \"bun run --cwd apps/web dev\"",
    "lint": "bun run lint --cwd apps/api && bun run lint --cwd apps/web",
    "typecheck": "bun run typecheck --cwd apps/api && bun run typecheck --cwd apps/web",
    "format": "bun run format --cwd apps/api && bun run format --cwd apps/web",
    "test:e2e": "playwright test",
    "db:up": "docker compose up -d",
    "db:migrate": "bunx prisma migrate dev --schema packages/db/prisma/schema.prisma",
    "db:generate": "bunx prisma generate --schema packages/db/prisma/schema.prisma",
    "db:studio": "bunx prisma studio --schema packages/db/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "6.19.1",
    "cron": "^4.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@playwright/test": "^1.55.0",
    "@types/cron": "^2.4.3",
    "@types/node": "^22.0.0",
    "bun-types": "^1.1.17",
    "concurrently": "^9.0.1",
    "eslint": "^9.7.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "prettier": "^3.3.3",
    "prisma": "6.19.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0"
  }
}
